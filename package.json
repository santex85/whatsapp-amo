{
  "name": "whatsapp-amocrm-gateway",
  "version": "1.0.0",
  "description": "Gateway service for WhatsApp and amoCRM integration",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:with-redis": "./scripts/start-redis.sh && npm run dev",
    "clean": "rm -rf dist",
    "test:basic": "./test-script.sh",
    "redis:start": "./scripts/start-redis.sh",
    "redis:stop": "brew services stop redis || pkill redis-server",
    "redis:check": "redis-cli ping || echo 'Redis is not running'",
    "rebuild:sqlite": "npm rebuild better-sqlite3",
    "fix:install": "rm -rf node_modules package-lock.json && npm cache clean --force && npm install"
  },
  "keywords": [
    "whatsapp",
    "amocrm",
    "gateway",
    "integration"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@whiskeysockets/baileys": "^6.7.8",
    "axios": "^1.6.5",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^12.4.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.18.0",
    "form-data": "^4.0.0",
    "multer": "^1.4.5-lts.1",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "qrcode": "^1.5.3",
    "qrcode-terminal": "^0.12.0",
    "redis": "^4.6.12"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.5",
    "@types/qrcode": "^1.5.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
